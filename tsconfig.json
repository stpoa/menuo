{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "paths": {
    "*": ["node_modules/*", "src/types/*", "src/**/*", "src/*"]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
